extends layout.pug

block hero
    section.hero.is-dark.is-bold
        .hero-body
            .container
                h1.title Parcial 3
                h2.subtitle The las dinner

block content
    .container(style="flex: 1; padding: 50px 0;")
        .columns.is-multiline
            each product in products
                .column.is-two-quarter
                    .card
                        .card-content
                            h1.title= product.especialidad
                            strong Masa: 
                            small= product.masa
                            br
                            strong Especialidad: 
                            small= product.especialidad
                            .button.is-fullwidth.is-primary
                                span.icon
                                    i.fas.fa-shopping-cart
                                span Add 
                                strong= ` ${product.precio} USD`